{
  "name": "system-api",
  "description": "An API for interacting with various operating systems. Developed for Prompt-ly.",
  "module": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "version": "0.1.0",
  "author": "Prompt-ly",
  "license": "Apache-2.0",
  "type": "module",
  "files": [
    "dist/*.js",
    "dist/*.d.ts"
  ],
  "scripts": {
    "build": "bun build --target=node ./src/index.ts --outdir=dist --external=koffi && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "postbuild": "rimraf tsconfig.types.tsbuildinfo",
    "demo": "bun run demo.ts",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@types/bun": "latest",
    "@types/node": "^22.0.0",
    "rimraf": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "koffi": "^2.12.1"
  }
}
